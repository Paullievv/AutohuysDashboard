<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

		{{ encore_entry_link_tags('app') }}

		<title>Autohuys Rhenen Dashboard</title>
		<link rel="icon" type="image/png" href="../images/favicon.png"/>
	</head>
	<body>

		{% if is_granted('IS_AUTHENTICATED_FULLY') %}
			<div class="main">
				<div class="sidenav">
					<img class="logo" src="images/logo.png"/>
					<div class="menu">
						<a href="/home">Overzicht</a>
						<a href="/maak-factuur">Factuur maken</a>
						<a href="/maak-klant">Klant toevoegen</a>
						{# <a href="showroom.html.twig">Showroom map</a>
						                <a href="detail.html.twig">Detailing lijst</a>
						                <a href="werknemers.html.twig">Werknemers</a> #}
					</div>

					<div class="profile">
						<div class="photo">
							<img class="profilepicture" src="images/ProfielfotoHarry.png">
						</div>
						<div class="info">
							<h5>Harry Vos</h5>
							<p>{{ app.user.email }}</p>
						</div>
					</div>
				</div>

				<div class="content">
					<div class="overview-area">
						<div class="stock">
							<h3>Auto's op Voorraad</h3>
							<h1>{{ voorraad }}</h1>
						</div>
						<div class="review">
							<h3>Klanttevredenheid</h3>
							<h1>9.8</h1>
						</div>
						<div class="detail">
							<h3>Auto's op detail lijst</h3>
							<h1>7</h1>
						</div>
					</div>
					<div class="header-todo">
						<h2>Todo</h2>
					</div>
					<div class="todo-list">
						<div class="morning">
							<h2>9:00 - 12:00</h2>
							<p>Foto's maken</p>
						</div>
						<div class="lunchtime">
							<h2>12:00 - 13:00</h2>
							<p>Lunchen</p>
						</div>
						<div class="customer">
							<h2>13:00 - 15:00</h2>
							<p>Klanten helpen</p>
						</div>
					</div>
				</div>
			</div>
		{% else %}
			<script>
				window.location.href = '/login'
			</script>
		{% endif %}


		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
	</body>
</html>
