<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
		<link rel="stylesheet" href="build/app.css">
		<title>Autohuys Rhenen Dashboard</title>
		<link rel="icon" type="image/png" href="/images/favicon.png"/>
	</head>
	<body>

		{% if is_granted('IS_AUTHENTICATED_FULLY') %}
			<div class="main">
				<div class="sidenav">
					<img class="logo" src="images/logo.png"/>
					<div class="menu">
						<a href="/home">Overzicht</a>
						<a href="/maak-factuur">Factuur maken</a>
						<a href="/maak-klant">Klant toevoegen</a>
					</div>

					<div class="profile">
						<div class="photo">
							<img class="profilepicture" src="images/ProfielfotoHarry.png">
						</div>
						<div class="info">
							<h5>Harry Vos</h5>
							<p>Administrator</p>
						</div>
					</div>
				</div>

				<div class="content">
					<div class="voorraad">
						{{ form_start(form) }}

						<div class="my-custom-class-for-errors">
							{{ form_errors(form) }}
						</div>

						<div class="row">
							<div class="col">
								{{ form_row(form.Naam) }}
							</div>
							<div class="col" id="some-custom-id">
								{{ form_row(form.Telefoonnummer) }}
							</div>
						</div>

						<div class="row">
							<div class="col">
								{{ form_row(form.Straat) }}
							</div>
							<div class="col" id="some-custom-id">
								{{ form_row(form.Huisnummer) }}
							</div>
						</div>

						<div class="row">
							<div class="col">
								{{ form_row(form.Woonplaats) }}
							</div>
							<div class="col" id="some-custom-id">
								{{ form_row(form.Postcode) }}
							</div>
						</div>

						<div class="row">
							<div class="col">
								{{ form_row(form.Email) }}
							</div>
							<div class="col" id="some-custom-id">
								{{ form_row(form.Save) }}
							</div>
						</div>

						{{ form_end(form) }}
					</div>
				</div>
			</div>
		{% else %}
			<script>
				window.location.href = '/login'
			</script>
		{% endif %}


		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
	</body>
</html>
